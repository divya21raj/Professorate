<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="6dp"
        card_view:cardBackgroundColor="@color/cardBg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/p_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/p_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/p_name"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:text="date"
                android:textColor="@color/black"
                android:textSize="@dimen/card_text_size" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/p_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignEnd="@id/p_name"
                android:layout_alignRight="@id/p_name"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/default_prof_image"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>